Ext.define('reservas_puce.view.pnlLugarViewController1', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.pnlhorario',

    onRowEditingEdit: function(editor, context, eOpts) {
        var store = Ext.getStore('Lugar');
        var rec = context.record;
        store.sync(
        {
            params:{
                id: rec.data.id
            },

            success: function(batch, success)
            {
                store.proxy.extraParams = {
                    busqueda: 1
                };
                store.load();
            },

            failure: function(batch, success)
            {
                Ext.Msg.alert('Error', 'Hubor un error');
            }
        });
    },

    onBtnHorarioNuevoClick: function(button, e, eOpts) {
        if(!Ext.getCmp('wndNuevoHorario'))
        {
            var store = Ext.getStore('Lugar');
            store.proxy.extraParams = {
                busqueda: 2
            };
            store.load();
            var win = Ext.create('reservas_puce.view.wndNuevoHorario');
            win.show();
        }
    },

    onBtnHorarioEliminarClick: function(button, e, eOpts) {
        var g = Ext.getCmp('grdHorario');
        var arrayKeys = g.getSelectionModel().selected.items;
        var indice = g.getSelectionModel().selectionStartIdx;

        if(arrayKeys.length === 0)
        Ext.Msg.alert('Error', 'Debe escoger un horario');
        else
        {
            var store = g.getStore();
            var rec = g.selection;
            Ext.Ajax.request({
                url: '../servidor/reservas_puce/lugar/deleteHorario',
                method:"post",
                params: {
                    id: rec.data.id
                },
                success: function( result, request ) {
                    var responseData = Ext.JSON.decode(result.responseText);
                    if(responseData.success)
                    {
                        var storeLugar = Ext.getStore('Lugar');
                        storeLugar.proxy.extraParams = {
                            busqueda: 1
                        };
                        storeLugar.load();
                        Ext.Msg.alert('Alerta', 'Se ha eliminado el registro exitosamente');

                    }
                    else
                    {
                        Ext.Msg.alert('Alerta','Este registro tiene datos asociados.');
                    }
                },

                failure: function(response, opts) {
                    console.log('server-side failure with status code ' + response.status);
                }
            });
        }
    }

});
